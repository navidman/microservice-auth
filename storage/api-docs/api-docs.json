{
    "openapi": "3.0.0",
    "info": {
        "title": "Auth-Microservice API",
        "version": "0.1"
    },
    "paths": {
        "/auth/otp": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Get Otp",
                "description": "Get otp by mobile No.",
                "operationId": "authGetOtp",
                "requestBody": {
                    "description": "Pass user mobile",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "mobile"
                                ],
                                "properties": {
                                    "mobile": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "09139071587"
                                    },
                                    "type": {
                                        "type": "boolean",
                                        "format": "text",
                                        "example": "0 or 1"
                                    },
                                    "national_code": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "در صورتی که فیلد تایپ با مقدار 1 ارسال شده بود بدین معنی میباشد که کاربر درحال ثبت نام است و کد ملی باید ارسال شود و در غیر اینصورت نیازی به ارسال کد ملی نیست"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "right credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "رمز یکبار مصرف ارسال شد"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "properties": {
                                                "field_name": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "خطای مرتبط با فیلد  مورد نظر"
                                                    },
                                                    "collectionFormat": "multi"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "status": {
                                            "type": "integer",
                                            "example": 400
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "خطا در اطلاعات ورودی"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/otp/resend": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Resend Otp",
                "description": "Resend otp by mobile No. (1 time every minute limitaion)",
                "operationId": "authResendOtp",
                "requestBody": {
                    "description": "Pass user mobile",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "mobile"
                                ],
                                "properties": {
                                    "mobile": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "09139071587"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "right credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "رمز یکبار مصرف ارسال شد"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "properties": {
                                                "field_name": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "خطای مرتبط با فیلد  مورد نظر"
                                                    },
                                                    "collectionFormat": "multi"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "status": {
                                            "type": "integer",
                                            "example": 400
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "خطا در اطلاعات ورودی"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/token": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "GetToken",
                "description": "Login by Mobile No. and otp",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user mobile and otp",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "mobile",
                                    "otp"
                                ],
                                "properties": {
                                    "mobile": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "09139071587"
                                    },
                                    "otp": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "right credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "عملیات با موفقیت انجام شد"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "token_type": {
                                                        "type": "string",
                                                        "example": "Bearer"
                                                    },
                                                    "expires_in": {
                                                        "type": "string",
                                                        "example": "172800"
                                                    },
                                                    "access_token": {
                                                        "type": "string",
                                                        "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJSUzI1NiJ9.eyJhdWQiOiIyIiwianRpIjoiYTU1ODg3MDUzMTVmMzc1ZGRiYWY5YzRhMmI3YTQ4YzVmY2NmM2IxZTQxZTcyZTBhMzAzNjU1Yzc0NzIzZTU"
                                                    },
                                                    "refresh_token": {
                                                        "type": "string",
                                                        "example": "def502008b3bd9cc76b139e6c4dd7d6b72d23684984ef2a4d9e03f96c2e1a6817be0f55b0b2659953cb3506b8ad0080aa0c38e983eb80066ee5564561f02c19203f0efcf3ce86791a05a0d44d15fbfd"
                                                    },
                                                    "user": {
                                                        "type": "array",
                                                        "items": {
                                                            "properties": {
                                                                "name": {
                                                                    "type": "string",
                                                                    "example": "نوید منصوری"
                                                                },
                                                                "avatar": {
                                                                    "type": "string",
                                                                    "example": "image.png"
                                                                },
                                                                "mobile": {
                                                                    "type": "string",
                                                                    "example": "09139071587"
                                                                },
                                                                "email": {
                                                                    "type": "string",
                                                                    "example": "email"
                                                                },
                                                                "verified_at": {
                                                                    "type": "timestamp",
                                                                    "example": "اگر این فیلد پر شده باشد کاربر به داشبورد هدادیت میشود  و اگر خالی باشد به صفحه ی تکمبل مشخصات کاربری هدایت میشود."
                                                                },
                                                                "register_submitted_at": {
                                                                    "type": "timestamp",
                                                                    "example": "اگر فیلد بالایی پر نشده بود و کاربر به صفحه تکمیل مشخصات هدایت شد با توجه به پر بودن یا نبودن این فیلد به کاربر اجازه تغییر و تکمیل اطلاعت کاربری داه میشود یا صرفا در انتظار تایید شدن اطلاعات نمایش داده میشود"
                                                                },
                                                                "terminals": {
                                                                    "type": "array",
                                                                    "items": {
                                                                        "properties": {
                                                                            "name_fa": {
                                                                                "type": "string",
                                                                                "example": "میلیونا"
                                                                            },
                                                                            "website": {
                                                                                "type": "string",
                                                                                "example": "Milyoona.com"
                                                                            },
                                                                            "active": {
                                                                                "type": "string",
                                                                                "example": "0 or 1"
                                                                            }
                                                                        },
                                                                        "type": "object"
                                                                    },
                                                                    "collectionFormat": "multi"
                                                                }
                                                            },
                                                            "type": "object"
                                                        },
                                                        "collectionFormat": "multi"
                                                    }
                                                },
                                                "type": "object"
                                            },
                                            "collectionFormat": "multi"
                                        },
                                        "status": {
                                            "type": "integer",
                                            "example": 200
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Wrong Code No.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "properties": {
                                                "field_name": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "خطای مرتبط با فیلد مورد نظر"
                                                    },
                                                    "collectionFormat": "multi"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "status": {
                                            "type": "integer",
                                            "example": 400
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "خطا در اطلاعات ورودی"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/token/check": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Check Token",
                "description": "Check User's Token",
                "operationId": "tokenCheck",
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "توکن شما معتبر است"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Wrong access token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 401
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "کاربر غیر مجاز است"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}